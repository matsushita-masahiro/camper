<div class="container">
  <h1 class="text-center">Posts</h1>
  <!--tab-->
  <ul class="nav nav-tabs nav-justified">
    <li class=<%="#{@friend_list}"%>><a href="#friend-tab" data-toggle="tab">Friends</a></li>
    <li class=<%="#{@new_list}"%>><a href="#new-tab" data-toggle="tab">New</a></li>
    <li class=<%="#{@hot_list}"%>><a href="#hot-tab" data-toggle="tab">Hot</a></li>
  </ul>
  <!--content-->
  <div class="tab-content">
    <div class="tab-pane fade <%="#{@friend_tab}"%>" id="friend-tab">
      <%= render 'share/post', posts: @friend_posts %>
      <%= will_paginate @friend_posts, :params => { tab: 'friend'} %>
    </div>
    <div class="tab-pane fade <%="#{@new_tab}"%>" id="new-tab">
      <%= render 'share/post', posts: @new_posts %>
      <%= will_paginate @new_posts, :params => { tab: 'new'} %>
    </div>
    <div class="tab-pane fade <%="#{@hot_tab}"%>" id="hot-tab">
      <%= render 'share/post', posts: @hot_posts %>
      <%= will_paginate @hot_posts, :params => { tab: 'hot'}  %>
    </div>
  </div>
</div>

<!-- Button trigger modal -->
<button type="button" class="btn btn-post" data-toggle="modal" data-target="#newPostModal">
  <i class="fas fa-pen"></i>
</button>

<!-- Modal -->
<div class="modal fade" id="newPostModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="newPostModalLabel">新しく投稿する</h4>
        <button type="button" class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_for @post do |f| %>
          <%= f.text_area :body, class: "form-control", placeholder: "ここに入力してください" %>
          <br>
          <%= f.file_field :files, multiple: true, accept:'image/jpg,image/jpeg,image/gif,video/mp4,video/mov,video/wmv' %>
          <br>
          <%= f.submit "投稿する", class: "btn btn-primary" %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
