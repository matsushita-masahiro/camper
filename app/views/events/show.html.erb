<div class="container">
  <h1 class="text-center"><%= @event.title %></h1>
  <div class="row">
    <div class="col-md-3">
      <h3 class= "text-center">企画者</h3>
      <div class="user-wrap">
        <div class="user-img">
          <% if @event.user.image? %>
            <%= image_tag(@event.user.image.url) %>
          <% else %>
            <%= image_tag("user.jpg") %>
          <% end %>
        </div>
        <div class="user-info">
          <h5><%= @event.user.name %></h5>
          <p><%= @event.user.intro %></p>
        </div>
      </div>
      <div class="btn-wrap">
      <br>
      <% if @event.user.id == current_user.id %>
      <!-- Button trigger modal -->
        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#editUserModal">
          ユーザー情報を編集する
        </button>
      <% else %>
        <% if @relation_flg %>
          <%= form_for @relationship, :url => {controller: 'relationships',action: 'create', friend_id: @event.user.id } do |f| %>
           <%= f.submit "友達申請", class: "btn btn-success" %>
          <% end %>
        <% else %>
          <span class="btn btn-secondary">申請済み</span>
        <% end %>
      <% end %>
      </div>
    </div>
    <div class="col-md-9">
      <div class="article-wrap">
        <ul class="article-files">
          <% @event.files.each do |file| %>
            <li>
              <% if isPicture?(file.url) %>
                <%= image_tag file.url %>
              <% elsif isVideo?(file.url)%>
                <%= video_tag file.url, controls: true %>
              <% end %>
            </li>
          <% end %>
        </ul>
        <h4>企画の詳細</h4>
        <p><%= @event.body %></p>
        企画の詳細はここ
      </div>
    </div>
  </div>
  
  <div class="member">
    <ul class="user-list">
      <% @members.each do |member| %>
        <li>
          <% if member.user.image? %>
            <%= image_tag(member.user.image.url) %>
          <% else %>
            <%= image_tag("user.jpg") %>
          <% end %>
          <%= member.user.name %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<!--trigger-->
<% if @event.user.id == current_user.id %>
  <button type="button" class="btn btn-post" data-toggle="modal" data-target="#newPostModal">
    <i class="fas fa-pen"></i>
  </button>
<% end %> 

<!--modal-->
<%= render "share/editUserModal" %>