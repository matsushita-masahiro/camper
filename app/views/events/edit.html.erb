<div class="container">
  <%= form_for @event do |f| %>
    <h1 class="text-center"><%= f.text_field :title, class: "text-center form-control" %></h1>
  <div class="row">
    <!--企画者情報-->
    <div class="col-md-3">
      <h3 class= "text-center">企画者</h3>
      <%= render "share/userInfo", user: @event.user %>
    </div>
    
    <!--イベント情報-->
    <div class="col-md-9">
      <div class="article-wrap">
        <ul class="article-files">
          <% @event.files.each do |file| %>
            <li>
              <% if isPicture?(file.url) %>
                <%= image_tag file.url %>
              <% elsif isVideo?(file.url)%>
                <%= video_tag file.url, controls: true %>
              <% end %>
            </li>
          <% end %>
        </ul>
        <h4>企画の詳細</h4>
        <p><%= f.text_area :body, class: "form-control" %></p>
        <p><i class="fas fa-map-marked-alt"></i> 場所 <%= f.text_field :place, class: "form-control" %></p>
        <p><i class="fas fa-calendar-alt"></i> 開催日 <%= f.date_field :event_date, class: "form-control" %></p>
        <p><i class="fas fa-calendar-alt"></i> 締切 <%= f.date_field :deadline, class: "form-control" %></p>
        <p><i class="fas fa-user-circle"></i> 人数 <%= f.number_field :recruit_num, class: "form-control" %></p>
      </div>
    </div>
  </div>
  
  <%= f.submit "変更を保存する", class: "btn btn-primary" %>
  <% end %>
  <!--formの終わり-->
  
  <!--参加者情報-->
  <h4>参加者</h4>
  <%= render "events/userListForEdit", members: @fixed_members %>
  <h4>参加希望者</h4>
  <%= render "events/userListForEdit", members: @pre_members %>
  
</div>

<!--modal-->
<!--modal for edit user-->
<div class="modal fade" id="editUserModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="editUserModalLabel">ユーザー情報を編集する</h4>
        <button type="button" class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_for @user, :url => {controller: 'users', action: 'update'} do |f| %>
          <%= f.file_field :image %>
          <br>
          <%= f.text_field :name, class: "form-control my-form",placeholder: "名前" %>
          <br>
          <%= f.text_area :intro, class: "form-control",placeholder:"自己紹介" %>
          <br>
          <%= f.submit "変更を保存する", class: "btn btn-primary" %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>